<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8f000000">

    <LinearLayout
        android:id="@+id/popup_anima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_dialog"
        android:orientation="vertical"
        android:padding="@dimen/dp_20">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_popup_add_wechat" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20">

            <ImageView
                android:id="@+id/head_image"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40" />

            <TextView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/head_image"
                android:text="添加我的微信"
                android:textColor="@color/grey_theme" />

            <TextView
                android:id="@+id/wechat_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/head_image"
                android:gravity="bottom"
                android:text="wechat"
                android:textColor="@color/black_theme" />
        </RelativeLayout>

        <TextView
            android:id="@+id/click_to_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/shape_green_corner20"
            android:drawableLeft="@drawable/ic_wechat_news"
            android:drawablePadding="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_30"
            android:paddingTop="@dimen/dp_6"
            android:paddingRight="@dimen/dp_30"
            android:paddingBottom="@dimen/dp_6"
            android:text="点击立即添加"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"/>
    </LinearLayout>
</RelativeLayout>