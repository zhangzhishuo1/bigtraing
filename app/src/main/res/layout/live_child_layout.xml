<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_280"
    android:layout_height="@dimen/dp_180"
    app:cardBackgroundColor="@color/border"
    app:cardCornerRadius="@dimen/dp_15"
    app:cardElevation="@dimen/dp_5"
    app:cardMaxElevation="@dimen/dp_10"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_140">

        <ImageView
            android:id="@+id/civ_teacher_photo"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_activityName"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:lines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            app:layout_constraintLeft_toRightOf="@id/civ_teacher_photo"
            app:layout_constraintTop_toTopOf="@id/civ_teacher_photo" />

        <ImageView
            android:id="@+id/img_alarm"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@drawable/ic_alarm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/civ_teacher_photo" />

        <TextView
            android:id="@+id/tv_start_date"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_3"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/fontColor666"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toBottomOf="@id/img_alarm"
            app:layout_constraintLeft_toRightOf="@id/img_alarm" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>