<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/dp_10"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/dp_10"
    app:cardMaxElevation="@dimen/dp_10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/infor_image"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/infor_title"
        android:textSize="@dimen/dp_15"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/dp_20"
        app:layout_constraintLeft_toRightOf="@+id/infor_image"
        app:layout_constraintTop_toTopOf="@+id/infor_image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sp_20"/>

    <ImageView
        android:id="@+id/inf0_imag_tb"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:background="@mipmap/usern_tb"
        app:layout_constraintLeft_toRightOf="@+id/infor_image"
        app:layout_constraintTop_toTopOf="@+id/infor_title" />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/infor_title"
        android:layout_marginTop="@dimen/dp_9"
        app:layout_constraintLeft_toRightOf="@+id/inf0_imag_tb"
        android:id="@+id/info_gz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       />

    <TextView
        android:id="@+id/infor_introduce"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:textSize="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        app:layout_constraintLeft_toRightOf="@+id/infor_image" />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>