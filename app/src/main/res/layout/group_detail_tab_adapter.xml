<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_50"
    android:layout_marginLeft="@dimen/dp_10">

    <View
        android:id="@+id/falls_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        android:background="@color/colorGrayEEE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintLeft_toLeftOf="@+id/tagContent"
        app:layout_constraintRight_toRightOf="@+id/tagContent" />

    <TextView
        android:id="@+id/tagContent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_24"
        android:background="@drawable/group_tab_bg"
        android:drawableRight="@drawable/ic_menu_arrow_down_gray"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/dp_3"
        android:paddingLeft="@dimen/dp_11"
        android:paddingRight="@dimen/dp_10"
        android:text="图纸深度"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>